@using Website.MultiResource;
@{
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
    }
@helper selected(string c, string culture)
{
    if (c == culture)
    {
        @:checked="checked"
    }
}
@using(Html.BeginForm("SetCulture", "Home"))
{
    <fieldset>
        <legend>@Resource.TitleHome
</legend>
        <div class="control-group">
            <div class="controls">
                <label for="en-us">
                    <input name="culture" id="vi" value="vi" type="radio" @selected("vi", culture) /> Viet Nam
                </label>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <label for="es">
                    <input name="culture" id="en-us" value="en-us" type="radio" @selected("en-us", culture) /> English
                </label>
            </div>
        </div>

    </fieldset>
}
<script type="text/javascript">

