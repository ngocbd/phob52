@model IPagedList<Website.Models.Product.ProductModel>
@using Website.Helper;
@using MvcPaging;
@{
    ViewBag.Title = @ViewData["title"];
    Layout = "~/Views/Shared/_Layout_two_colum.cshtml";
    ViewBag.Des = @ViewData["des"];
    ViewBag.BeakCrum = ViewData["breakcrum"];
}
@{
    var ii = 1;
}
<style type="text/css">
    .price_product {
        font-size:15px;
        font-weight:bold;
        color:red;
    }
    .pager span {
        padding:2px 5px;
        background-color:red;
        color:white;
        margin:5px;
    }
    .detail_item_product a:hover{
    color:red;
    }
</style>
<div class="list_product float-left">
    @foreach (var item in Model)
        {
            var i = item.ProductName.ToString() + "_dt";
            var y = item.ProductId.ToString();
            var d = RemoveUnicode.ReplaceUrl(i + y).ToString();
            var pathImage = item.ImageProduct;
            string[] chuoi = pathImage.Split(new char[] { '/' });
            int aa = chuoi.Count();
            int bb = aa - 1;
        
            var iff= ii%=2;
        <!--item-->
            if(iff>0){
        <div class="item_product" style="width: 305px; text-align:center;float:left; height:310px; padding-top:10px;">
            <div class="image_product">
                <a href="/@RemoveUnicode.Replace(d).ToLower()">
                    <img src="@item.ImageProduct" style="width: 300px; height: 260px;" alt="@chuoi[bb].Split('.')[0].ToString()" />
                </a>
            </div>
            <div class="detail_item_product">
                <h3><a href="/@RemoveUnicode.Replace(d).ToLower()" style="color:#7c1f22; font-size:15px;">@item.ProductName.ToUpper();</a></h3> <br />
                <span class="price_product">Giá : @item.PriceProduct.ToString("N0") vnd @*@if(item.PriceSaleProduct!=null){ <span> | </span><span style="color:red;"> Khuyến mại : @item.PriceSaleProduct</span>}*@</span>
            </div>
        </div>
            }
            else{
        <div class="item_product" style="width: 305px; text-align:center;float:left; padding-left:50px;height:310px; padding-top:10px;">
            <div class="image_product">
                <a href="/@RemoveUnicode.Replace(d).ToLower()">
                    <img src="@item.ImageProduct" style="width: 300px; height: 260px;" alt="@chuoi[bb].Split('.')[0].ToString()" />
                </a>
            </div>
            <div class="detail_item_product">
                <h3><a href="/@RemoveUnicode.Replace(d).ToLower()" style="color:#7c1f22; font-size:15px;">@item.ProductName.ToUpper()</a></h3><br />
                <span class="price_product">Giá : @item.PriceProduct.ToString("N0") vnd @*@if(item.PriceSaleProduct!=null){ <span> | </span><span style="color:red;"> Khuyến mại : @item.PriceSaleProduct</span>}*@</span>
            </div>
        </div>
            }
            
            ii++;
        }
</div>
<div class="pager float-left" style="padding-top:20px;">
    @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
</div>
