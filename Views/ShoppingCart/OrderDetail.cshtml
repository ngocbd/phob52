@model IEnumerable<Website.Models.Product.ShoppingCartItem>
@using Telerik.Web.Mvc.UI;
@{
    ViewBag.Title = "OrderDetail";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2 style="margin-bottom:20px;">Bảng thông tin chi tiết đơn đặt hàng</h2>

@Html.Telerik().TabStrip().Name("taptrip").Items(TabStrip => { TabStrip.Add().Text("Chi tiết đơn hàng").Content(detailorder().ToHtmlString());
}).SelectedIndex(0)
    @helper detailorder()
{
    <table class="table-admin">
    <tr>
        <th>
            Tên sản phẩm 
        </th>
        <th>
            Hình ảnh sản phẩm
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Giá thành
        </th>
        <th>
            Số tiền
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            <img src="@item.ProductImage.Replace("/images/upload/images","/images/upload/_thumbs/images")" style="height:100px;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @item.Price.ToString("N0") VND
        </td>
        <td>
            @item.Total.ToString("N0") VND
        </td>
    </tr>
}

</table>
    
}