@model Website.Models.keyword_url
<script src="@Url.Content("~/Content/Plugin/ckeditor/ckeditor.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-1.9.1.js")" type="text/javascript"></script>
@using Telerik.Web.Mvc.UI;
@{
    ViewBag.Title = "Tạo mới";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Thêm mới</h2>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
<fieldset>
        <legend><br /></legend>
        <table class="table-admin-create">
            <tr>
                <td>
                    <img src="/Images/ico-help.gif" />
                </td>
                <td style="width:150px;">
                    @Html.LabelFor(model => model.keyword)
                </td>
                <td>
                    @Html.TextAreaFor(model => model.keyword, new {@id="keyword" })<br />
                    @Html.ValidationMessageFor(model => model.keyword)<br />
                    <script type="text/javascript">
                        var editor;
                        function createEditor(languageCode, id, height, width) {
                            var editor = CKEDITOR.replace(id, {
                                language: languageCode,
                            });
                        }

                        $(document).ready(function () {
                            createEditor('vi', 'keyword', 400, 200);
                            createEditor('vi', 'keyword1', 400, 200);

                        });
                        </script>
                </td>
            </tr>
            <tr>
                <td>
                    <img src="/Images/ico-help.gif" />
                </td>
                <td style="width:150px;">
                    @Html.LabelFor(model => model.url_replace)
                </td>
                <td>
                    @Html.TextAreaFor(model => model.url_replace,new {@id="keyword1" })<br />
                    @Html.ValidationMessageFor(model => model.url_replace)<br />
                </td>
            </tr>

        </table>
    <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
